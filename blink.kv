#: import main __main__

<BlinkButton>:
    background_color:(0.6, 0.937, 0.133,1)
    on_press: self.win_or_not()


<Homescreen>:
    BoxLayout:
        orientation:'vertical'
        Label:
            halign: 'center'
            font_size: 30
            text: 'Welcome to BlinkGame\n|\n|\n|\nv\nThis is a logo'
        BoxLayout:
            orientation:'horizontal'
            size_hint_y: None
            height: "80dp"
            Button:
                text: 'Goto game'
                on_press: root.manager.current = 'game'
            Button:
                text: 'Quit'
                on_press: app.stop()

<BlinkGame>:
    BoxLayout:
        orientation:'vertical'
        GridLayout:

            cols: 3
            padding: 3
            spacing: 3
            BlinkButton:
                id:bu1

            BlinkButton:
                id:bu2

            BlinkButton:
                id:bu3

            BlinkButton:
                id:bu4

            BlinkButton:
                id:bu5

            BlinkButton:
                id:bu6

            BlinkButton:
                id:bu7

            BlinkButton:
                id:bu8

            BlinkButton:
                id:bu9

        BoxLayout:
            orientation:'horizontal'
            size_hint_y: None
            height: "40dp"
            Button:
                text: "Start"
                on_press: root.startgame()
            Button:
                text: "Stop"
                on_press: root.stopgame()
            Button:
                text: "Back to Home"
                on_press: root.manager.current = 'home'
            Label:
                text: "Score : {}".format(app.SCORE)
